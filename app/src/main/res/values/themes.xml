<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Dialog -->
    <style name="AppTheme.Dialog.Base" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Dialog.TranslucentStatusBar" parent="AppTheme.Dialog.Base">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Dialog.TranslucentStatusBar.NoColor">
        <item name="android:windowBackground">@color/overlay_background</item>
    </style>

    <!-- TextView -->
    <style name="reposTextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="reposTextView.Label">
        <item name="android:textSize">@dimen/label_text_size</item>
    </style>

    <style name="reposTextView.Title">
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="reposTextView.ToolbarTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <!-- Buttons -->
    <style name="reposButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="reposButton.Primary">
        <item name="android:background">@drawable/primary_button_selector</item>
        <item name="android:textColor">@color/primary_button_text</item>
    </style>

    <style name="reposButton.Outlined">
        <item name="android:background">@drawable/outlined_button_selector</item>
        <item name="android:textColor">@color/outlined_button_text</item>
    </style>

    <!-- List views -->
    <style name="reposListViewStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>
</resources>